{
  "id": "SEC_PERSONAL_DATA",
  "title": "Datos personales",
  "subtitle": "Información general sobre el alumno/a",
  "layout": "'name surname surname nia dni', 'address address address email phone', 'region city city city cp'",
  "controls": [ 
    {
      "id": "CTRL_DNI",
      "label": "DNI/NIE",
      "caption": "DNI o NIE",
      "area": "dni",
      "control_type": {
        "Edit": {
          "placeholder": "Escribe tu DNI o NIE",
          "default": null,
          "value": null
        }
      },
      "validation":{
        "type": "dni",
        "required": true
      }
    },
    {
      "id": "CTRL_NIA",
      "label": "NIA",
      "caption": "Número de Identificación de Alumnado",
      "area": "nia",
      "control_type": {
        "Edit": {
          "placeholder": "Escribe tu NIA",
          "default": null,
          "value": null
        }
      },
      "validation":{
        "type": "string",
        "required": true,
        "regex" : {
          "regex": "^[0-9]+$",
          "message": "Sólo se admiten números"
        },
        "minLength": 6,
        "maxLength": 6
      }
    },
    {
      "id": "CTRL_EMAIL",
      "label": "Correo electrónico",
      "caption": "Dirección de correo electrónico",
      "area": "email",
      "control_type": {
        "Edit": {
          "placeholder": "Escribe tu correo electrónico",
          "default": null,
          "value": null
        }
      },
      "validation":{
        "type": "email",
        "required": true
      }
    },
    {
      "id": "CTRL_NOMBRE",
      "label": "Nombre",
      "caption": "Nombre completo",
      "area": "name",
      "control_type": {
        "Edit": {
          "placeholder": "Escribe tu nombre",
          "default": null,
          "value": null
        }
      }
    },
    {
      "id": "CTRL_APELLIDOS",
      "label": "Apellidos",
      "caption": "Apellidos",
      "area": "surname",
      "control_type": {
        "Edit": {
          "placeholder": "Escribe tus apellidos",
          "default": null,
          "value": null
        }
      }
    },
    {
      "id": "CTRL_DIRECCION",
      "label": "Dirección",
      "caption": "Domicilio (calle/plaza, número y puerta)",
      "area": "address",
      "control_type": {
        "Edit": {
          "placeholder": "Escribe tu dirección postal",
          "default": null,
          "value": null
        }
      }
    },
    {
      "id": "CTRL_PROVINCIA",
      "label": "Provincia",
      "caption": "Provincia del domicilio",
      "area": "region",
      "control_type": {
        "Combo": {
          "placeholder": "una provincia",
          "default": null,
          "options": "general_data/provincias"
        }
      }
    },
    {
      "id": "CTRL_CIUDAD",
      "label": "Localidad",
      "caption": "Ciudad del domicilio",
      "area": "city",
      "disabledIf": [
        {
          "control_id": "CTRL_PROVINCIA",
          "operator": "0",
          "value": ""
        }
      ],
      "control_type": {
        "Combo": {
          "placeholder": "una localidad",
          "default": null,
          "options": ["general_data", "provincias"]
        }
      }
    }
  ]
}